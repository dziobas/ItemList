<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_focused="true"
		android:state_enabled="true">
		<shape
			android:shape="rectangle">
			<corners
				android:radius="@dimen/button_bar_corner_radius" />
			<gradient
				android:startColor="@color/button_bar_focused_start"
				android:endColor="@color/button_bar_focused_end"
				android:angle="270" />
			<stroke
				android:width="@dimen/button_bar_border_width"
				android:color="@color/button_bar_border_focused" />
		</shape>
	</item>
	<item
		android:state_pressed="true"
		android:state_enabled="true">
		<shape
			android:shape="rectangle">
			<corners
				android:radius="@dimen/button_bar_corner_radius" />
			<gradient
				android:startColor="@color/button_bar_pressed_start"
				android:endColor="@color/button_bar_pressed_end"
				android:angle="270" />
			<stroke
				android:width="@dimen/button_bar_border_width"
				android:color="@color/button_bar_border_pressed" />
		</shape>
	</item>	
	<item>
		<shape
			android:shape="rectangle">
			<corners
				android:radius="@dimen/button_bar_corner_radius" />
			<gradient
				android:startColor="@color/button_bar_default_start"
				android:endColor="@color/button_bar_default_end"
				android:angle="270" />
			<stroke
				android:width="@dimen/button_bar_border_width"
				android:color="@color/button_bar_border_default" />
		</shape>
	</item>
</selector>